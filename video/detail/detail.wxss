/* video/detail/detail.wxss */
.container{margin-bottom: 190rpx;}
page{background: #fff;}
/* 视频播放区 */
.videocon{width:100%;height: 422rpx;position: relative;}
.videocon .vimg{width: 100%;height: 100%;}
.videocon .vmask{width:100%;height: 100%;position: absolute;top: 0;left: 0;background: rgba(0,0,0,0.33);display: flex;align-items: center;justify-content: center;}
.videocon .vmask image{width: 84rpx;height: 84rpx;}
.video-play{width:100%;height: 422rpx;}
.video-play .video{width:100%;height: 100%;}
/* 信息栏 */
.vcol{width:690rpx;height: auto;padding: 20rpx 0;margin: 0 30rpx; background: #fff;border-bottom: 1px solid #e6e6e6;display: flex;align-items: center;justify-content: space-between;}
.vcol .vleft{max-width:600rpx;height: auto;display: flex;flex-wrap: wrap;}
.vcol .vleft .vname{width:100%;height: auto;font-size: 34rpx;font-weight: bold;line-height: 42rpx;color: #000;}
.vcol .vleft .font30{width:100%;height: auto;font-size: 24rpx;color: #999;line-height: 33rpx;margin-top: 15rpx;}
.vcol .vright{width:auto;height: auto;}
.vcol .vright .btnShare{width:40rpx;height: 75rpx;font-size: 20rpx;}
.vcol .vright .btnShare image{width:40rpx;height: 45rpx;}
.vcol .vright .btnShare .txtShare{ width:100%;text-align: center;
    background-image:-webkit-linear-gradient(left,#ff2832,#ff6528); 
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent; }

.vcomlogo{width:100rpx;height: 100rpx;border: 1px solid #e5e5e5;border-radius: 100rpx;overflow: hidden;margin-right: 15rpx;}
.vcomlogo image{width:100%;height: 100%;}
.vcomcon{width:440rpx;height: auto;display:flex;flex-wrap: wrap;flex-direction: column;justify-content: center;min-height:100rpx; }
.vcomcon .vcomname{width:100%;height: auto;font-size: 28rpx;font-weight: 300;line-height: 45rpx;color: #000;}
.vcomcon .icnIntoysol{width:100%;height: auto;font-size: 26rpx;line-height: 45rpx;display: flex;align-items: center;}
.vcomcon .icnIntoysol image{width:27rpx;height: 23rpx;margin-right: 6rpx;} 
.vcomcon .icnIntoysol .txt{
    background-image:-webkit-linear-gradient(left,#ff2832,#ff6528);
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent;
    }

.vright .btnInWeb{width:122rpx;height: 52rpx;display: flex;align-items: center;justify-content: center;border-radius: 52rpx;
  /* Firefox 3.6+ */
background: -moz-linear-gradient(left, #ff2932, #ff6428); 
/* Safari 4-5, Chrome 1-9 */
/* -webkit-gradient(,  [, ]?,  [, ]? [, ]*) */
background: -webkit-gradient(linear,left,from(#ff2932),to(#ff6428));
/* Safari 5.1+, Chrome 10+ */
background: -webkit-linear-gradient(left, #ff2932, #ff6428);
/* Opera 11.10+ */
background: -o-linear-gradient(left, #ff2932, #ff6428);
}
.vright .btnInWeb .btncon{width: 98%;height: 90%;margin: 1px;background: #fff;border-radius: 50rpx;
font-size: 24rpx;display: flex;align-items: center;justify-content: center;}
.vright .btnInWeb .btncon image{width:27rpx;height: 26rpx;margin-right: 6rpx;}
.vright .btnInWeb .btncon .txt{font-weight: bold;
    background-image:-webkit-linear-gradient(left,#ff2832,#ff6528);
    -webkit-background-clip:text; 
    -webkit-text-fill-color:transparent;}

/* 相关视频 */
.videolist{width:690rpx;height: auto;margin: 0 30rpx;}
.videolist .title{width:100%;height: auto;font-size: 34rpx;font-weight: bold;color: #000;line-height: 100rpx;}

/* 视频 */
.vli{width: 100%;height: 135rpx;margin-bottom: 30rpx;}
.vli .vli-left{width:240rpx;height: 135rpx;border-radius: 6rpx;position: relative;overflow: hidden;float: left;}
.vli .vli-left image{width:100%;height: 100%;}
.vli .vli-left .vli-mask{width:100%;height: 100%;position:absolute;left: 0;top: 0;background: rgba(0,0,0,0.33);display: flex;align-items: center;justify-content: center;border-radius: 6rpx;}
.vli .vli-left .vli-mask image{width:47rpx;height: 47rpx;}

.vli .vli-right{width:425rpx;height: auto;float: right;}
.vli .vli-right .vli-name{width:100%;height: 72rpx;line-height: 36rpx;font-size: 30rpx;color: #000;font-weight: bold;overflow: hidden;text-overflow: ellipsis;}
.vli .vli-right .vli-hot{width:100%;height: 34rpx;line-height: 34rpx;font-size: 26rpx;color: #999;margin-top: 29rpx;}



/* 导航 */
.vtab-nav{width:100%;height: 90rpx;position: fixed;bottom: 100rpx;left: 0;z-index: 9999; color: #fff;display: flex;}
.vtab-nav .vline{width:420rpx;height: 90rpx;background: #ffa729;text-align: center;display: flex;align-items: center;flex-wrap: wrap;}
.vtab-nav .vline .top{width:100%;font-size: 32rpx;font-weight: bold;display: flex;justify-content: center;margin-top: 10rpx;align-items: center;}
.vtab-nav .vline .top image{width:39rpx;height: 38rpx;margin-right: 6rpx;}
.vtab-nav .vline .butt{width:100%;height: auto;font-size: 20rpx;opacity: 0.44;margin-bottom: 10rpx;}

.vtab-nav .vaddcart{width:330rpx;height: 90rpx;text-align: center;display: flex;align-items: center;flex-wrap: wrap;
/* Firefox 3.6+ */
background: -moz-linear-gradient(left, #ff2932, #ff6428); 
/* Safari 4-5, Chrome 1-9 */
/* -webkit-gradient(,  [, ]?,  [, ]? [, ]*) */
background: -webkit-gradient(linear,left,from(#ff2932),to(#ff6428));
/* Safari 5.1+, Chrome 10+ */
background: -webkit-linear-gradient(left, #ff2932, #ff6428);
/* Opera 11.10+ */
background: -o-linear-gradient(left, #ff2932, #ff6428);
}
.vtab-nav .vaddcart .top{width:100%;font-size: 32rpx;font-weight: bold;display: flex;justify-content: center;margin-top: 10rpx;align-items: center;}
.vtab-nav .vaddcart .top image{width:34rpx;height: 35rpx;margin-right: 6rpx;}
.vtab-nav .vaddcart .butt{width:100%;height: auto;font-size: 20rpx;opacity: 0.44;margin-bottom: 10rpx;}

/* commodity_screen */
.commodity_screen { width: 100%; height: 100%; position: fixed; top: 0; left: 0; background: #000; opacity: 0; overflow: hidden;  z-index: 10000;  color: #fff;}
.commodity_attr_box { width: 100%; overflow: hidden; position: fixed; bottom: 0; left: 0; z-index: 10000; background: #f5f5f5;box-shadow: 0 -1rpx 20rpx rgba(0,0,0,0.09); }
.commodity_attr_box .wx{width:375rpx;height: 150rpx;margin-bottom: 10rpx;background:#fff;text-align: center;padding: 50rpx 0;font-size: 26rpx;line-height: 50rpx;float: left;}
.commodity_attr_box .wx image{width:100rpx;height: 100rpx;border-radius: 100rpx;display: inline-block;}
.commodity_attr_box .quxiao{width:750rpx;height: 90rpx;font-size: 30rpx;line-height: 90rpx;text-align: center;background: #fff;float: left;}

.wx .shareButton{ height: 114rpx; background: none; border: 0; border-color: #FFF; font-size: 26rpx}
