/* video/index/index.wxss */

/* 切换 */
.video-nav{width:100%;height: auto;}
.vtab{ display: flex; flex-direction: column; width: 620rpx; margin-left: 30rpx; }
.vtab-nav{ width: 620rpx; height: 80rpx; background: #fff; display: flex; line-height: 79rpx; position: relative; padding: 15rpx 0; font-size: 30rpx; color: #85898d; flex-wrap: nowrap; overflow-x: scroll; } 

.vtab-item{width:auto;text-align:center;height: 80rpx;margin-right:40rpx;box-sizing: border-box;}
.tabcurrent{font-size: 34rpx;color: #000;font-weight: bold;position: relative;}
.tabcurrent::after{position: absolute;bottom: 7rpx;content: "";width: 30rpx;height: 4rpx;border-radius: 4rpx;background: #ff2832;left: 50%;transform: translateX(-15rpx);}

/* 搜索按钮 */
.btnsearch{width:100rpx;height: 80rpx;margin: 15rpx 0;display: flex;align-items: center;justify-content: center;}
.btnsearch image{width: 42rpx;height:42rpx;position: relative;top: 5rpx; }

/* 视频列表 */
.videolist{width:100%;height: auto;}
.videoli{width:100%;height: auto;}

.videoli .video-img{width:100%;height: 422rpx;position: relative;}
.videoli .video-play{width:100%;height: 422rpx;}
.videoli .video-play .video{width:100%;height: 100%;}
.videoli .video-img .img{width: 100%;height:100%;position: absolute;left: 0;top: 0;z-index: 1; }
.videoli .video-img .vmask{width:100%;height: 100%;position: absolute;left: 0;top: 0;z-index: 2;
  background: -webkit-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0)); /* Firefox 3.6 - 15 */
  background: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0)); /* 标准的语法 */
  }
.videoli .video-img .vmask .vm1{width: 100%;height: 100%;display: flex;align-items: center;justify-content: center;position: absolute;}
.vm1 image{width: 84rpx;height: 84rpx;}
.videoli .video-img .vmask .vm2{width: 690rpx;height: auto;display: flex;align-items: center;justify-content: center;position: absolute;margin: 20rpx 30rpx;top: 0;left: 0;color: #fff;font-size: 34rpx;line-height: 42rpx;}

/* 视频厂家信息条 */
.video-or{width:690rpx;height: 60rpx;padding: 20rpx 30rpx;background: #fff;display: flex;align-items: center;justify-content:space-between;border-bottom: 1px solid #e6e6e6;}
/* 视频厂家左边 */
.video-or .left{height: 100%;display: flex;align-items: center;}
.video-or .left .vlogo{width:66rpx;height: 66rpx;border: 1px solid #e5e5e5;border-radius: 66rpx;overflow: hidden;}
.video-or .left .vlogo image{width:100%;height: 100%;}
.video-or .left .vname{font-size: 30rpx;font-weight: bold;color: #000;margin: 0 15rpx;}
.video-or .left .vmore{font-size: 27rpx;color: #999}
.video-or .left .vmore::before{content: '|';margin-right: 15rpx;font-size: 27rpx;}
/* 视频厂家加入询单 */
.video-or .right{width:170rpx;height: 100%;}
.video-or .right .addCart{width:170rpx;height: 50rpx;border-radius: 50rpx;margin: 5rpx 0;font-size: 24rpx;color: #fff;font-weight: bold;text-align: center;line-height: 50rpx;display: flex;align-items: center;justify-content: center;
  /* Firefox 3.6+ */
background: -moz-linear-gradient(left, #ff2932, #ff6428); 
/* Safari 4-5, Chrome 1-9 */
/* -webkit-gradient(,  [, ]?,  [, ]? [, ]*) */
background: -webkit-gradient(linear,left,from(#ff2932),to(#ff6428));
/* Safari 5.1+, Chrome 10+ */
background: -webkit-linear-gradient(left, #ff2932, #ff6428);
/* Opera 11.10+ */
background: -o-linear-gradient(left, #ff2932, #ff6428);
  }
.video-or .right .addCart image{width:24rpx;height: 26rpx;margin-right: 6rpx;}

