/* pages/videolist/videolist.wxss */
.container2{padding:0 30rpx;width:690rpx;}
/* 搜索 */
.search{width: 750rpx;height: 74rpx;padding: 0 30rpx 10rpx 30rpx;background: #f3f5f6;box-sizing: border-box;}
.searchcon{width:630rpx;height: 64rpx;background: #fff;padding:0 30rpx;border-radius: 64rpx;font-size: 28rpx;color: #9e9e9e;display: flex;align-items: center;margin-bottom: 10rpx;justify-content: center;}
.searchcon image{width:32rpx;height: 32rpx;margin-right: 10rpx;position: relative;top: 5rpx;}


.vnav{width:690rpx;height: 100rpx;font-size: 26rpx;line-height: 100rpx;color: #999;text-align: right;}
.vnav .font34{font-size: 34rpx;color: #000;font-weight: bold;float:left;}
.vnav .btn{margin-left: 20rpx;}
.vnav .btnselect{color: #000;}

/* 搜索视频页面 */
.videolist{width:690rpx;height: auto;}

/* 视频 */
.vli{width: 100%;height: 135rpx;margin-bottom: 30rpx;}
.vli .vli-left{width:240rpx;height: 135rpx;border-radius: 6rpx;position: relative;overflow: hidden;float: left;}
.vli .vli-left image{width:100%;height: 100%;}
.vli .vli-left .vli-mask{width:100%;height: 100%;position:absolute;left: 0;top: 0;background: rgba(0,0,0,0.33);display: flex;align-items: center;justify-content: center;border-radius: 6rpx;}
.vli .vli-left .vli-mask image{width:47rpx;height: 47rpx;}

.vli .vli-right{width:425rpx;height: auto;float: right;}
.vli .vli-right .vli-name{width:100%;height: 72rpx;line-height: 36rpx;font-size: 30rpx;color: #000;font-weight: bold;overflow: hidden;text-overflow: ellipsis;}
.vli .vli-right .vli-hot{width:100%;height: 34rpx;line-height: 34rpx;font-size: 26rpx;color: #999;margin-top: 29rpx;}