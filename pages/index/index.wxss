/* pages/index/index.wxss */
/* 轮播图 */
.index-swiper{width: 750rpx;height: 430rpx;}
.index-swiper image{width:750rpx;height: 430rpx;}

/* 搜索 */
.search{width: 750rpx;height: 74rpx;padding: 0 30rpx 10rpx 30rpx;background: #f3f5f6;box-sizing: border-box;}
.searchcon{width:630rpx;height: 64rpx;background: #fff;padding:0 30rpx;border-radius: 64rpx;font-size: 28rpx;color: #9e9e9e;display: flex;align-items: center;margin-bottom: 10rpx;justify-content: center;}
.searchcon image{width:32rpx;height: 32rpx;margin-right: 10rpx;position: relative;top: 5rpx;}
.topsearch{position: fixed;top: 0rpx;z-index: 99;display: block;}

/* 首页导航 */
.ind-nav{width: 690rpx;height: auto;padding: 30rpx ;background: #fff;}
.ind-nav .ul{width: 100%;height:auto;display: flex;align-items: center;justify-content: space-between;}
.ind-nav .ul .li{width:108rpx;height: auto;}
.ind-nav .ul .li image{width:108rpx;height: 108rpx;}
.ind-nav .ul .li .nav-name{width:100%;height: auto;font-size: 26rpx;color: #000;text-align: center;line-height: 28rpx;position: relative;top: -5rpx;}
/* 广告条 */
.inn-ad{width:690rpx;height: auto;padding: 0 30rpx 0 30rpx; display: flex;justify-content: center;background: #fff;}
.inn-ad .ad-con{width: 690rpx;height: 120rpx;border-radius: 10rpx; position: relative;overflow: hidden;box-shadow: 0 0 10rpx rgba(0,0,0,0.3);}
.inn-ad .ad-con .adimg{width:690rpx;height: 120rpx;border-radius: 10rpx;}
.inn-ad .ad-con .i{width: 27rpx;height: 16rpx;position: absolute;right: 0;bottom: 0;border-radius: 5rpx 0 0 0;}

/* 热门专题 */
.title{width:100%;height: 100rpx;line-height: 100rpx;font-size: 34rpx;color: #000;font-weight: bold;}
.new-col{width: 100%;height: auto;padding: 0 30rpx;box-sizing: border-box;}
.bgfff{background: #fff;}
.bor-bott{border-bottom: 1px solid #f1f1f1;}
.more{float: right;font-size: 26rpx;font-weight: 300;color: #999;}
.list-li{width:690rpx;height: 420rpx;border-radius: 10rpx;background: #fff;box-shadow: 0 0 20rpx rgba(0,0,0,0.05);overflow: hidden;margin-bottom: 30rpx;}
.list-li .img,.list-li .img image{width:690rpx;height: 300rpx;position: relative;overflow: hidden;}
.list-li .img .new-mask{width:690rpx;height: 300rpx;position: absolute;left: 0;top: 0;}
.list-li .txt-con{padding: 15rpx 30rpx;width: 630rpx;}
.list-li .txt-con .font30b{width:100%;height: 50rpx;font-size: 30rpx; line-height: 50rpx; color: #000;font-weight: bold;overflow: hidden;text-overflow: ellipsis;}
.list-li .txt-con .font26{width:100%;height: 40rpx;font-size: 26rpx; line-height: 40rpx; color: #999999;overflow: hidden;text-overflow: ellipsis;}
.list-li:last-child{margin-bottom: 0;}
/* 短视频 */
.video-col{width:750rpx;height: auto;padding: 0 0;}
.video-col .title{width:690rpx;height: 100rpx;line-height: 100rpx;font-size: 34rpx;color: #000;font-weight: bold;margin: 0 30rpx;}
.video-slider{width:100%;height: 400rpx;}
.video-slider .video-swiper{width:100%;height: 100%;}
.video-slider .video-swiper swiper-item{display: flex;justify-content: center;}
.video-item{width:690rpx;height: 100%;position: relative;border-radius: 10rpx;overflow: hidden;}
.video-item .v-img{width:100%;height: 100%;position: absolute;z-index: 1;left: 0;top: 0;border-radius: 10rpx;overflow: hidden;}
.video-item .vmask{width:100%;height: 100%;position: absolute;z-index: 3;left: 0;top: 0;display: flex;align-items: center;justify-content: center;}
.video-item .vmask image{width:112rpx;height: 112rpx;}
.video-item .vtitle{width:100%;height: auto;padding: 40rpx 20rpx 20rpx 20rpx;box-sizing: border-box;color: #fff;position: absolute;z-index: 2;left: 0;bottom: 0;
  background: -webkit-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1)); /* Safari 5.1 - 6.0 */
  background: -o-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1)); /* Opera 11.1 - 12.0 */
  background: -moz-linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1)); /* Firefox 3.6 - 15 */
  background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,1)); /* 标准的语法 */
}
.video-item .vtitle .font3054{width:100%;height: 54rpx;overflow: hidden;text-overflow: ellipsis;font-size: 30rpx;line-height: 54rpx;font-weight: bold;}
.video-item .vtitle .font2654{width:100%;height: 34rpx;overflow: hidden;text-overflow: ellipsis;font-size: 26rpx;line-height: 34rpx;}
.video-swiper .video-play{width:690rpx;height: 100%;border-radius: 10rpx;overflow: hidden;}
.video-swiper .video-play .video{width:100%;height: 100%;}

.more .font28{font-size: 28rpx;color: #000;}
.more .font22{font-size: 22rpx;color: #737373;}

/* 爆款推荐 */
.prolist{width:100%;display: flex;flex-wrap:wrap;justify-content:space-between;}
.prolist .pro{width:335rpx;background: #fff;border-radius: 10rpx;box-shadow: 0 0 20rpx rgba(0,0,0,0.05);overflow: hidden;margin-bottom: 20rpx;position: relative;height: 360rpx;}
.prolist .pro .proimg{width:100%;height: 260rpx;position: relative;}
.prolist .pro .proimg .play{width:68rpx;height: 68rpx;position: absolute;bottom: 20rpx;left: 20rpx;}
.prolist .pro image{width:100%;height: 100%;float: left;}
.prolist .pro .pro-con{width:100%;height: auto;box-sizing: border-box;padding: 10rpx 25rpx;float: left;}
.prolist .pro .pro-con .font2835{width:100%;height: 45rpx;line-height: 45rpx; font-size: 28rpx;color: #000;overflow: hidden;text-overflow: ellipsis;display:inline-block;float: left;}
.prolist .pro .pro-con .font2635{width:100%;height: 35rpx;line-height: 35rpx; font-size: 26rpx;color: #999;overflow: hidden;text-overflow: ellipsis;display:inline-block;float: left;}

.prolist .pro .addicon{width:28rpx;height: 28rpx;background: #ff2832;border-radius: 28rpx;position: absolute;bottom: 15rpx;right: 20rpx;display: flex;justify-content: center;align-items: center;font-size: 28rpx;color: #fff;font-weight: 600;line-height: 28rpx;background-image: url(data:image/png;base64,);background-size: contain;background-repeat: no-repeat;}