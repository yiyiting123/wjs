
.vnav{width:690rpx;height: 100rpx;font-size: 26rpx;line-height: 100rpx;color: #999;text-align: right;padding: 0 30rpx;}
.vnav .font34{font-size: 34rpx;color: #000;font-weight: bold;float:left;}
.vnav .btn{margin-left: 20rpx;}
.vnav .btnselect{color: #000;}

.newslist{width:690rpx;height: auto;margin: 0 30rpx;}
.list-li{width:690rpx;height: 420rpx;border-radius: 10rpx;background: #fff;box-shadow: 0 0 20rpx rgba(0,0,0,0.05);overflow: hidden;margin-bottom: 30rpx;}
.list-li .img,.list-li .img image{width:690rpx;height: 300rpx;position: relative;overflow: hidden;}
.list-li .img .new-mask{width:690rpx;height: 300rpx;position: absolute;left: 0;top: 0;}
.list-li .txt-con{padding: 15rpx 30rpx;width: 630rpx;}
.list-li .txt-con .font30b{width:100%;height: 50rpx;font-size: 30rpx; line-height: 50rpx; color: #000;font-weight: bold;overflow: hidden;text-overflow: ellipsis;}
.list-li .txt-con .font26{width:100%;height: 40rpx;font-size: 26rpx; line-height: 40rpx; color: #999999;overflow: hidden;text-overflow: ellipsis;}
.list-li:last-child{margin-bottom: 0;}